<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent" >

	<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	              android:layout_width = "match_parent"
	              android:layout_height = "wrap_content"
	              android:orientation = "vertical"
	              android:padding = "3mm" >

		<Button style = "@style/item" android:id = "@+id/appmanager" android:text = "@string/proxymode"
		        />

		<EditText android:layout_width = "match_parent" android:layout_height = "wrap_content"
		          android:id = "@+id/ssid"
		          android:hint = "请填写ssid"
				/>
		<EditText android:layout_width = "match_parent" android:layout_height = "wrap_content"
		          android:id = "@+id/port"
		          android:hint = "请填写端口号"
		           />

		<Button style = "@style/item" android:id = "@+id/connect" android:text = "@string/connect"
		        />

		<Button style = "@style/item" android:id = "@+id/disconnect" android:text = "断开"
		         />

		<Button style = "@style/item" android:id = "@+id/trygetnumber" android:text = "@string/getphonenumber" />

		<Button style = "@style/item" android:id = "@+id/getinfo" android:text = "@string/getsmsinfo"
				/>

		<TextView android:layout_width = "wrap_content"
		          android:layout_height = "wrap_content"
		          android:layout_marginLeft = "10dp"
		          android:layout_marginRight = "10dp"
		          android:layout_marginTop = "20dp"
		          android:layout_marginBottom = "20dp"
		          android:textSize = "12dp"
		          android:singleLine = "false"
		          android:id = "@+id/message" />


	</LinearLayout >
</ScrollView >
